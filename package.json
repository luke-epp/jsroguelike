{
  "name": "jsroguelike",
  "version": "1.0.0",
  "description": "A 2D roguelike game built with TypeScript and Electron",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "build": "tsc && cp src/index.html dist/",
    "build:watch": "tsc --watch",
    "start": "npm run build && electron .",
    "dev": "concurrently \"npm run build:watch\" \"wait-on dist/main.js && electron .\"",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win"
  },
  "keywords": [
    "roguelike",
    "game",
    "electron",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.5",
    "concurrently": "^8.2.2",
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.jsroguelike.app",
    "productName": "JSRoguelike",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}
